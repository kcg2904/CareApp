                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:background="@drawable/white_edittext"
                    android:hint="우편번호"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/company_signup_zipcodebtn"
                    android:layout_width="70dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#f49b25"
                    android:text="찾기" />
            </LinearLayout>

            <TextView
                android:id="@+id/errer_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text=""
                android:textColor="#ff0000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:gravity="center"
                    android:text="사업장주소"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/company_signup_address"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_edittext"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:gravity="center"
                    android:hint="사업장 주소"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/errer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text=""
                android:textColor="#ff0000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:gravity="center"
                    android:text="상세주소"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/company_signup_address2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_edittext"
                    android:gravity="center"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:hint="상세주소"
                    android:imeOptions="actionDone"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/errer_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text=""
                android:textColor="#ff0000" />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:gravity="center"
                    android:text="가입자명"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/company_signup_name"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_edittext"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:hint="가입자명 입력"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
