                    android:id="@+id/Company_privacytext"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/termspopupbtn" />

                <RadioButton
                    android:id="@+id/company_signup_PrivacyPolicy"
