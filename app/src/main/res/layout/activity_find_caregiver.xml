<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".FindCaregiverActivity">

    <include layout="@layout/menubar"
        android:id="@+id/caregiver_menu"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/layoutbar"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:gravity="center"
            android:text="지역검색"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/search_text"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@drawable/searchbar"
            android:gravity="center"
            android:textColor="@color/black"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:hint="검색어 입력" />

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:src="@drawable/searchbtn" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:clickable="true"
            android:enabled="true"
            app:uiZoomControls="true" />

        <TextView
            android:id="@+id/search_reult2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="@drawable/searchresult"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:gravity="center|left"
            android:paddingStart="30dp"
            android:text="조건에 맞는 요양사의 검색 결과 입니다"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_gravity="top"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" />
        <include layout="@layout/footer"
            android:id="@+id/footer"/>
    </LinearLayout>
</LinearLayout>